{
  "name": "ubio-backend-challenge",
  "version": "1.0.0",
  "description": "",
  "author": "Evgeny Belkovich",
  "license": "MIT",
  "scripts": {
    "init": "npm i",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon --exec \"ts-node src/main.ts\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect=0.0.0.0:9229 dist/src/main.js\"",
    "start:prod": "node dist/src/main.js",
    "seed": "seed -u 'mongodb://localhost:27017/discovery' --drop-database ./seed/data",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watchAll",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles --verbose",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "npm run lint --fix",
    "prettier": "prettier --write '**/*.{js,json,ts,md}' --ignore-path .eslintignore",
    "format": "npm run prettier && npm run lint:fix",
    "ts": "tsc -p tsconfig.json"
  },
  "pre-commit": [
    "format"
  ],
  "dependencies": {
    "@nestjs/cli": "9.2.0",
    "@nestjs/common": "9.0.1",
    "@nestjs/core": "9.0.1",
    "@nestjs/mongoose": "^9.2.2",
    "@nestjs/platform-express": "9.0.1",
    "@nestjs/swagger": "6.2.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "reflect-metadata": "0.1.13",
    "dotenv": "^16.0.3",
    "mongoose": "7.0.2",
    "rimraf": "3.0.2"
  },
  "devDependencies": {
    "@nestjs/cli": "9.0.0",
    "@nestjs/schematics": "9.0.1",
    "@nestjs/testing": "9.0.1",
    "@types/express": "4.17.13",
    "@types/jest": "^26.0.14",
    "@types/node": "18.0.3",
    "@typescript-eslint/eslint-plugin": "5.30.5",
    "@typescript-eslint/parser": "5.30.5",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "28.1.2",
    "mongo-seeding-cli": "^3.7.2",
    "mongo-seeding": "^3.7.2",
    "nodemon": "^2.0.6",
    "prettier": "2.7.1",
    "ts-jest": "28.0.5",
    "ts-loader": "9.3.1",
    "ts-node": "10.8.2",
    "tsc-watch": "^4.2.9",
    "tsconfig-paths": "4.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
